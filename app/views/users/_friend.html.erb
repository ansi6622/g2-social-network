<% if @graph.are_friends?(@current_user.id, friend.id) %>
  <li class="user">
    <div class="user_image">
      <% if friend.profile_pic? %>
        <%= image_tag(user.profile_pic.thumb) %>
      <% else %>
        <img src="<%= image_path "person_placeholder.png" %>" height="100px">
      <% end %>
    </div>
    <div class="user_name"><%= friend.first_name %> <%= friend.last_name %></div>
    <div class="friend_button">
      <%= render 'users/unfriend_form', :user => friend %>
    </div>
  </li>
<% end %>