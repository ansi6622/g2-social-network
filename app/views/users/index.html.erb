<div id="users_list_container">
  <div id="users_list_title"><h2>All Users</h2></div>
  <%= flash[:message] %>
  <ul>
    <% @users.each do |user| %>
        <li>
          <div id="profile_picture_thumbnail"></div>
          <div id="user_first_and_last"><%= user_display_name(user) %></div>
          <div id="add_or_unfriend_button">
            <% if @current_user.id != user.id %>
                <form method="post" action="/friendships">
                  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                  <input type="hidden" name="friend_id" value="<%= user.id %>">
                  <button type="submit">Add</button>
                </form>
            <% end %>
          </div>
        </li>
    <% end %>
  </ul>
</div>