<li class="user">
  <div class="user_image">
    <% if user.profile_pic? %>
        <%= image_tag(user.profile_pic.thumb) %>
    <% else %>
        <img src="<%= image_path "person_placeholder.png" %>" height="100px">
    <% end %>
  </div>
  <div class="user_name"><%= user.first_name %> <%= user.last_name %></div>
  <div class="friend_button">
    <% if is_friend %>
        <% if @graph.friendship_pending?(@current_user.id, user.id) %>
            <p>Pending</p>
        <% else %>
            <%= render 'users/add_friend_form', user: user %>
        <% end %>
        <%= render 'users/unfriend_form', user: user %>
    <% else %>
        <% if @graph.friendship_pending?(@current_user.id, user.id) %>
            <p>Pending</p>
        <% else %>
            <%= render 'users/add_friend_form', user: user %>
        <% end %>
    <% end %>
  </div>
</li>