<div id="new-message">
  <%= form_for [@user, @message] do |f| %>
    <p><%= f.label 'To', class: 'registration_label' %>
    <%= f.collection_select :receiver_id, @friends, :id, :full_name %></p>

    <p><%= f.label :subject, class: 'registration_label' %>
    <%= f.text_field :subject %></p>

    <p><%= f.label :body, 'Message', class: 'registration_label' %>
    <%= f.text_area :body %></p>

    <p><%= f.submit 'Send Message' %></p>
  <% end %>
</div>