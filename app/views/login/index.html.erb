
<div class="error">
<%= flash[:login_error] %>
  </div>

<div class="authentication_form">
  <h2>Bradtke Book</h2>
  <div class="error">
    <p><%= flash[:failed_login] %></p>
  </div>
  <%= form_tag :controller => :sessions, :action => :create do %>
      <ul>
        <li><%= label_tag :email %><%= text_field_tag :email %></li>
        <li><%= label_tag :password %><%= password_field_tag :password %></li>
        <li><%= submit_tag 'Login', :id => 'login_submit' %></li>
      </ul>
  <% end %>
</div>



