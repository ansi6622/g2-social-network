
<div class="authentication_form">
  <h2>Bradtke Book</h2>

  <%= form_for @user, url: "/session" do |f| %>

    <p><%= f.label :email %>
      <%= f.text_field :email %></p>

    <p><%= f.label :password %>
      <%= f.password_field :password %></p>

    <p><%= f.submit "Login" %></p>

  <% end %>
</div>
