
<div class="error">
<%= flash[:login_error] %>
  </div>

<div class="authentication_form">
  <h2>Bradtke Book</h2>

  <%= form_tag(:controller => :sessions, :action => :create) do %>


    <p><%= label :email, :email %>
      <%= text_field_tag :email %></p>

    <p><%= label :password, :password %>
      <%= password_field_tag :password %></p>

    <p><%= submit_tag "Login" %></p>

  <% end %>
</div>






