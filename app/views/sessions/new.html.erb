<div class="authentication_form">
  <h2>Bradtke's Book</h2>
  <div class="error">
    <p><%= flash[:failed_login] %></p>
  </div>
  <%= form_tag :controller => :sessions, :action => :create do %>
    <p><%= label_tag :email, nil, class: "registration_label" %><%= text_field_tag :email %></p>
    <p><%= label_tag :password, nil, class: "registration_label" %><%= password_field_tag :password %></p>
    <p><%= submit_tag 'Login', :id => 'login_submit' %></p>
  <% end %>
</div>
